<craftworx>

	<append xpath="/styles">

<!--	// SMX // WINDOW // HUD Logo -->

		<style name="SMX.hudLogo.window" type="window">
			<style_entry name="pos" value="0,0" />
			<style_entry name="size" value="250,40" />
			<style_entry name="anchor" value="TopRight" />
		</style>


<!--	// SMX // WINDOW // In-game Menu -->

		<style name="SMX.ingame.menu" type="window">
			<style_entry name="pos" value="-500,0" />
			<style_entry name="size" value="408,1080" />
		</style>


<!--	// SMX // WINDOW // Compass Window -->

		<style name="SMX.compass.window" type="window">
			<style_entry name="pos" value="-200,-9" />
			<style_entry name="size" value="400,43" />
			<style_entry name="anchor" value="CenterTop" />
		</style>


<!--	// SMX // WINDOW // Unit Frame Window -->

		<style name="SMX.unitFrame.window" type="window">
			<style_entry name="pos" value="9,15" />
			<style_entry name="size" value="240,175" />
			<style_entry name="anchor" value="BottomLeft" />
		</style>


<!--	// SMX // WINDOW // Level Display & XP Bar Window -->

		<style name="SMX.levelXP.window" type="window">
			<style_entry name="pos" value="-30,-15" />
			<style_entry name="size" value="140,96" />
			<style_entry name="anchor" value="LeftTop" />
		</style>


<!--	// SMX // WINDOW // Day & Time Display Window -->

		<style name="SMX.dayTimeFrame.window" type="window">
			<style_entry name="pos" value="-12,50" />
			<style_entry name="size" value="100,100" />
			<style_entry name="anchor" value="LeftTop" />
		</style>


<!--	// SMX // SPRITE // In-Game Menu Buttons -->

		<style name="SMXButton1" type="sprite">
			<style_entry name="size" value="243,85" />
			<style_entry name="atlas" value="ItemIconAtlas" />
			<style_entry name="sprite" value="smxbutton1" />
			<style_entry name="type" value="sliced" />
		</style>

		<style name="SMXButton2" type="sprite">
			<style_entry name="size" value="243,85" />
			<style_entry name="atlas" value="ItemIconAtlas" />
			<style_entry name="sprite" value="smxbutton2" />
			<style_entry name="type" value="sliced" />
		</style>

		<style name="SMXButton3" type="sprite">
			<style_entry name="size" value="206,85" />
			<style_entry name="atlas" value="ItemIconAtlas" />
			<style_entry name="sprite" value="smxbutton3" />
			<style_entry name="type" value="sliced" />
		</style>

		<style name="SMXButtonHover1" type="button">
			<style_entry name="size" value="197,52" />
			<style_entry name="atlas" value="ItemIconAtlas" />
			<style_entry name="sprite" value="menu_empty" />
			<style_entry name="hoversprite" value="smxbuttonhover" />
			<style_entry name="hoverscale" value="1.0" />
			<style_entry name="type" value="sliced" />
		</style>

		<style name="SMXButtonHover2" type="button">
			<style_entry name="size" value="160,52" />
			<style_entry name="atlas" value="ItemIconAtlas" />
			<style_entry name="sprite" value="menu_empty" />
			<style_entry name="hoversprite" value="smxbuttonhover" />
			<style_entry name="hoverscale" value="1.0" />
			<style_entry name="type" value="sliced" />
		</style>


<!--	// SMX // SPRITE // 15px Icon Template -->

		<style type="sprite" name="SMXicon15px">
			<style_entry name="color" value="[iconColor]" />
			<style_entry name="width" value="15" />
			<style_entry name="height" value="15" />
			<style_entry name="foregroundlayer" value="true" />
		</style>


<!--	// SMX // TEXTURE // Compass Bar Texture -->

		<style name="SMX.compassBar.texture" type="texture">
			<style_entry name="depth" value="8" />
			<style_entry name="pos" value="50, -3" />
			<style_entry name="size" value="300,23" />
			<!--style_entry name="texture" value="@modfolder:Textures/compass/smxcompassbar.png" /-->
			<style_entry name="texture" value="Textures/UI/ui_game_compass" />
			<style_entry name="color" value="[iconColor]" />
			<style_entry name="tooltip" value="CHARACTER" />
		</style>


<!--	// SMX // "GLOBAL" // Toolbelt Interface Design -->

		<style name="SMXitemStack85">
			<style_entry name="select_color" value="[beige]" />
			<style_entry name="press_color" value="[limeGreen]" />
			<style_entry name="final_pressed_color" value="[lightGrey]" />
			<style_entry name="background_color" value="[mediumGrey]" />
			<style_entry name="highlight_color" value="[hoverColor]" />
			<style_entry name="holding_color" value="[white]" />
			<style_entry name="width" value="82" />
			<style_entry name="height" value="82" />
			<style_entry name="hover_icon_grow" value="1.5" />
			<style_entry name="on_press" value="true" />
			<style_entry name="sound_volume" value="0.75" />
			<style_entry name="pickup_sound" value="[pickup_click]" />
			<style_entry name="place_sound" value="[place_click]" />
		</style>

	</append>
	
<!--	// SMX // ItemStack Style -->

		<set xpath="/styles/style[@name='itemStack']/style_entry[@name='width']/@value">49</set>
		<set xpath="/styles/style[@name='itemStack']/style_entry[@name='height']/@value">49</set>

</craftworx>